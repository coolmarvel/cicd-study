{
  "rootDir": "../",

  "modulePaths": ["."],
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": { "^src/(.*)$": "<rootDir>/../src/$1" },

  "transform": { "^.+\\.(t|j)s$": "ts-jest" },

  "testTimeout": 10000,
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/e2e/api-key/*.e2e-spec.ts", "<rootDir>/test/e2e/setting/*.e2e-spec.ts"],

  "collectCoverage": true,
  "collectCoverageFrom": ["./src/common/api-key/controllers/**", "./src/common/setting/controllers/**", "./src/modules/**/controllers/**"]
}
